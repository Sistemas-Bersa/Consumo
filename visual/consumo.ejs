<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Consumo | Bersa Cloud</title>
    <link rel="stylesheet" href="/estilos.css">
    
    <!-- LIBRER√çA PARA BUSCADOR DE ALMACENES (TOM SELECT) -->
    <link href="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/css/tom-select.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/tom-select@2.2.2/dist/js/tom-select.complete.min.js"></script>
    
    <script src="https://unpkg.com/lucide@latest"></script>
</head>
<body>
    <div class="container">
        <header class="header-top">
            <div class="brand">
                <div class="brand-icon">
                    <i data-lucide="minus-circle"></i>
                </div>
                <h1 style="margin:0">M√≥dulo <span class="text-naranja">Consumo</span></h1>
            </div>
            <a href="https://bersacloud.app" class="btn-inicio">
                <i data-lucide="home" size="20"></i> INICIO
            </a>
        </header>

        <!-- TOOLBAR -->
        <div class="toolbar-unified">
            
            <!-- 1. ALMAC√âN (CON BUSCADOR) -->
            <div class="input-wrapper">
                <label class="label-herramienta">ALMAC√âN / UNIDAD</label>
                <!-- Quitamos la clase search-input para que TomSelect tome el control -->
              <select id="selectorAlmacen" class="search-input" placeholder="Escribe para buscar almac√©n...">
    <!-- Opci√≥n vac√≠a para el placeholder -->
    <option value="">Seleccione un almac√©n...</option>

    <% almacenesPermitidos.forEach(wh => { %>
        <option value="<%= wh.clave_sap %>" <%= almacenActivo === wh.clave_sap ? 'selected' : '' %>>
            <%= wh.nombre %>
        </option>
    <% }) %>
</select>
            </div>

            <!-- 2. BUSCADOR DE PRODUCTOS -->
            <div class="input-wrapper">
                <label class="label-herramienta">FILTRAR PRODUCTO</label>
                <input type="text" id="buscador" class="search-input" placeholder="Escribir..." onkeyup="filtrarTabla()">
            </div>

            <!-- 3. FECHA -->
            <div class="input-wrapper" style="width: 100%;">
                <label class="label-herramienta">FECHA SALIDA</label>
                <input type="date" id="fechaConsumo" class="search-input" value="<%= new Date().toISOString().split('T')[0] %>">
            </div>
            
            <!-- 4. BOT√ìN -->
            <button onclick="registrarSalidas()" class="btn-registrar-blanco">
                <i data-lucide="send" size="20"></i> REGISTRAR SALIDAS
            </button>
        </div>

        <!-- TABLA -->
        <div class="table-wrapper">
            <table class="stock-table" id="tablaStock">
                <thead>
                    <tr>
                        <th style="width: 40%; text-align: left;">Producto</th>
                        <th style="width: 15%;">Unidad</th>
                        <th style="width: 15%;">Stock Actual</th>
                        <th style="width: 15%;">Retirar</th>
                        <th style="width: 15%;">Saldo Final</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (datos.length > 0) { %>
                        <% datos.forEach((p, index) => { %>
                            <% const esPieza = (p.unidad || '').toUpperCase().includes('PIEZA'); %>
                            <tr class="stock-row">
                                <td class="text-bold-negro"><%= p.producto %></td>
                                <td class="text-bold-naranja" style="text-align: center;"><%= p.unidad %></td>
                                <td style="text-align: center; font-weight: bold;">
                                    <span id="stock-<%= index %>"><%= parseFloat(p.stock_actual || 0).toFixed(3) %></span>
                                </td>
                                <td style="text-align: center;">
                                    <input type="number" 
                                           class="input-fisico" 
                                           step="<%= esPieza ? '1' : 'any' %>" 
                                           placeholder="<%= esPieza ? '0' : '0.000' %>"
                                           data-codigo="<%= p.codigo_general %>"
                                           data-index="<%= index %>"
                                           data-es-pieza="<%= esPieza %>"
                                           onkeypress="return validarTecla(event, this)"
                                           oninput="calcularSaldo(this)">
                                </td>
                                <td style="text-align: center; font-weight: 900; color: var(--azul-bersa);">
                                    <span id="saldo-<%= index %>"><%= parseFloat(p.stock_actual || 0).toFixed(3) %></span>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr><td colspan="5" class="no-data">No hay productos disponibles.</td></tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>

    <script>
        lucide.createIcons();

        // INICIALIZAR EL BUSCADOR DE ALMACENES
new TomSelect("#selectorAlmacen", {
    create: false,
    sortField: { field: "text", direction: "asc" },
    placeholder: "üîç Buscar almac√©n...", // Texto que sale cuando est√° vac√≠o
    allowEmptyOption: true,
    onChange: function(value) {
        if (value) {
            // Solo redirige si seleccion√≥ un valor real
            location.href = '/consumo?wh=' + value;
        }
    }
});

        // TUS FUNCIONES EXISTENTES
        function validarTecla(e,i){const p=i.getAttribute('data-es-pieza')==='true';if(!p)return true;const c=e.which?e.which:e.keyCode;if(c>31&&(c<48||c>57))return false;return true;}
        function calcularSaldo(i){const x=i.getAttribute('data-index'),a=parseFloat(document.getElementById(`stock-${x}`).innerText)||0,r=parseFloat(i.value)||0,t=a-r,d=document.getElementById(`saldo-${x}`);d.innerText=t.toFixed(3);d.className=t<0?'text-alerta text-bold-negro':'text-bold-negro';}
        
        async function registrarSalidas() {
            const fecha = document.getElementById('fechaConsumo').value;
            const inputs = Array.from(document.querySelectorAll('.input-fisico')).filter(i => i.value > 0);
            if(inputs.length === 0) return alert("Ingrese cantidades a retirar.");
            
            const conteos = inputs.map(i => ({
                codigo: i.getAttribute('data-codigo'),
                cantidad: parseFloat(i.value) * -1
            }));

            if(!confirm(`¬øConfirmar retiro con fecha ${fecha}?`)) return;

            const res = await fetch('/procesar-ajuste', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ almacen: '<%= almacenActivo %>', fecha, conteos })
            });

            if (res.ok) { alert("‚úÖ Consumo registrado."); location.reload(); }
            else { alert("‚ùå Error al guardar."); }
        }

        function filtrarTabla() {
            const val = document.getElementById("buscador").value.toUpperCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
            const rows = document.getElementsByClassName("stock-row");
            for (let r of rows) {
                const text = r.innerText.toUpperCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
                r.style.display = text.includes(val) ? "" : "none";
            }
        }
    </script>
</body>
</html>